<Window x:Class="HENRY.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views = "clr-namespace:HENRY.Views"
        Title="MainWindow" Height="720" Width="1280" 
        Keyboard.KeyDown="keyDownEventHandler" Keyboard.KeyUp="keyUpEventHandler">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="720*"/>
        </Grid.RowDefinitions>
        <Border x:Name="thingpanel"></Border>
        <views:DevView x:Name="devViewControl" Loaded="devViewControl_Loaded" Grid.Row="1"></views:DevView>
        <views:UserView x:Name="userViewControl" Loaded="userViewControl_Loaded" Grid.Row="1"></views:UserView>
    </Grid>
</Window>
